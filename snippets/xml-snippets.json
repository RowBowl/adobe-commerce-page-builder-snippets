	"[widget.xml] New Widget Configuration":{
		"prefix": [
			"widget-config"
		],
		"body":[
			"$BLOCK_COMMENT_START ${1:widget_name} Widget $BLOCK_COMMENT_END",
			"$BLOCK_COMMENT_START ${2:widget_description} $BLOCK_COMMENT_END",
			"$BLOCK_COMMENT_START Configure if the title is shown next to the icon or just the icon is displayed (for tables seen throughout the site where real estate matters) $BLOCK_COMMENT_END",
			"<widget class=\"${0}\" id=\"doc_icon\">",
			"\t<label>${1:widget_name}</label>",
			"\t<description>${2:widget_description}</description>",
			"\t<parameters>",
			"\t\t<parameter name=\"${3:first_parameter}\" xsi:type=\"text\" required=\"true\" visible=\"true\" sort_order=\"${4:parameter_order}\">",
			"\t\t\t<label>${5:parameter_display_name}</label>",
			"\t\t</parameter>",
			"\t</parameters>",
			"\t$BLOCK_COMMENT_START <containers></containers> $BLOCK_COMMENT_END",
			"</widget>",
			"$0"
		]
	}
