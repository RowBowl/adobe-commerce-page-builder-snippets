	"[module.xml] New module file": {
		"prefix": [
			"mod-page"
		],
		"body": [
			"<?xml version=\"1.0\"?>",
			"<config xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\"",
			"\txsi:noNamespaceSchemaLocation=\"urn:magento:framework:Module/etc/module.xsd\">",
			"\t\t<module name=\"$1\" setup_version=\"${2:0.0.1}\" >",
			"\t\t\t<sequence>",
			"\t\t\t\t${3|<module name=\"Magento_PageBuilder\">,<module name=\"Magento_Widget\">,<module name=\"\">|}",
			"\t\t\t</sequence>",
			"\t\t</module>",
			"</config>"
		],
		"description": "A snippet to generate a module.xml file for page builder modules. Includes sequence to load magento's pagebuilder module first."
	},
	"[di.xml] New Appearance DI": {
		"prefix": [
			"di-appearance"
		],
		"body": [
			"<?xml version=\"1.0\"?>",
			"<config xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\" ",
			"\txsi:noNamespaceSchemaLocation=\"urn:magento:framework:ObjectManager/etc/config.xsd\">",
			"\t\t<virtualType name=\"AppearanceSource${1:_}\" type=\"Magento\\PageBuilder\\Model\\Source\\VisualSelect\">",
			"\t\t\t<arguments>",
			"\t\t\t\t<argument name=\"optionsSize\" xsi:type=\"string\">large</argument>",
			"\t\t\t\t<argument name=\"optionsData\" xsi:type=\"array\">",
			"\t\t\t\t<item name=\"0\" xsi:type=\"array\">",
			"\t\t\t\t\t<item name=\"value\" xsi:type=\"string\">default</item>",
			"\t\t\t\t\t\t<item name=\"title\" xsi:type=\"string\" translate=\"true\">Default</item>",
			"\t\t\t\t\t</item>",
			"\t\t\t\t</argument>",
			"\t\t\t</arguments>",	
			"\t\t</virtualType>",
			"</config>"
		],
		"description": "A snippet to generate a di.xml to inject an appearance. Required for content type creation process"
	},
	"[di.xml] New Virtual Type for Appearance DI": {
		"prefix": [
			"di-virtualtype-appearance"
		],
		"body": [
			"<virtualType name=\"AppearanceSource${1:_}\" type=\"Magento\\PageBuilder\\Model\\Source\\VisualSelect\">",
			"\t\t<arguments>",
			"\t\t\t<argument name=\"optionsSize\" xsi:type=\"string\">large</argument>",
			"\t\t\t<argument name=\"optionsData\" xsi:type=\"array\">",
			"\t\t\t\t<item name=\"0\" xsi:type=\"array\">",
			"\t\t\t\t\t<item name=\"value\" xsi:type=\"string\">default</item>",
			"\t\t\t\t\t\t<item name=\"title\" xsi:type=\"string\" translate=\"true\">Default</item>",
			"\t\t\t\t\t</item>",
			"\t\t\t</argument>",
			"\t\t</arguments>",	
			"</virtualType>"
		],
		"description": "A snippet to generate a new <virtualType> element within a di.xml to define an appearance"
	},
	"[pagebuilder_*_form.xml] New Form UI Component for Pagebuilder Conntent type":{
		"prefix": [
			"pb-ui-component"
		],
		"body":	[
			"<?xml version=\"1.0\" encoding=\"UTF-8\"?>",
			"<form xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\" ",
			"\txsi:noNamespaceSchemaLocation=\"urn:magento:module:Magento_Ui:etc/ui_configuration.xsd\" ",
			"\textends=\"${1|pagebuilder_base_form,pagebuilder_base_form_with_background_attributes, |}\">",
			"\t<argument name=\"data\" xsi:type=\"array\">",
			"\t\t<item name=\"js_config\" xsi:type=\"array\">",
			"\t\t\t<item name=\"provider\" xsi:type=\"string\">",
			"\t\t\t\tpagebuilder_${2:content_type}_form.pagebuilder_${2:content_type}_form_data_source",
			"\t\t\t</item>",
			"\t\t</item>",
			"\t\t<item name=\"label\" xsi:type=\"string\" translate=\"true\">${3:display name}</item>",
			"\t</argument>",
			"\t<settings>",
			"\t\t<namespace>pagebuilder_${2:content_type}_form</namespace>",
			"\t\t<deps>",
			"\t\t\t<dep>pagebuilder_${2:content_type}_form.pagebuilder_${2:content_type}_form_data_source</dep>",
			"\t\t</deps>",
			"\t</settings>",
			"\t<dataSource name=\"pagebuilder_${2:content_type}_form_data_source\">",
			"\t\t<argument name=\"data\" xsi:type=\"array\">",
			"\t\t\t<item name=\"js_config\" xsi:type=\"array\">",
			"\t\t\t\t<item name=\"component\" xsi:type=\"string\">Magento_PageBuilder/js/form/provider</item>",
			"\t\t\t</item>",
			"\t\t</argument>",
			"\t\t<dataProvider name=\"pagebuilder_${2:content_type}_form_data_source\" class=\"Magento\\PageBuilder\\Model\\ContentType\\DataProvider\">",
			"\t\t\t<settings>",
			"\t\t\t\t<requestFieldName/>",
			"\t\t\t\t<primaryFieldName/>",
			"\t\t\t</settings>",
			"\t\t</dataProvider>",
			"\t</dataSource>",
			"\t<fieldset name=\"appearance_fieldset\" sortOrder=\"10\" component=\"Magento_PageBuilder/js/form/element/dependent-fieldset\">",
			"\t\t<settings>",
			"\t\t\t<label translate=\"true\">Appearance</label>",
			"\t\t\t<additionalClasses>",
			"\t\t\t\t<class name=\"admin__fieldset-visual-select-large\">true</class>",
			"\t\t\t</additionalClasses>",
			"\t\t\t<collapsible>false</collapsible>",
			"\t\t\t<opened>true</opened>",
			"\t\t\t<imports>",
			"\t\t\t\t<link name=\"hideFieldset\">${$.name}.appearance:options</link>",
			"\t\t\t\t<link name=\"hideLabel\">${$.name}.appearance:options</link>",
			"\t\t\t</imports>",
			"\t\t</settings>",
			"\t\t<field name=\"appearance\" formElement=\"select\" sortOrder=\"10\" component=\"Magento_PageBuilder/js/form/element/dependent-visual-select\">",
			"\t\t\t<argument name=\"data\" xsi:type=\"array\">",
			"\t\t\t\t<item name=\"config\" xsi:type=\"array\">",
			"\t\t\t\t\t<item name=\"default\" xsi:type=\"string\">${4:default}</item>",
			"\t\t\t\t</item>",
			"\t\t\t</argument>",
			"\t\t\t<settings>",
			"\t\t\t\t<additionalClasses>",
			"\t\t\t\t\t<class name=\"admin__field-wide\">true</class>",
			"\t\t\t\t\t<class name=\"admin__field-visual-select-container\">true</class>",
			"\t\t\t\t</additionalClasses>",
			"\t\t\t\t<dataType>text</dataType>",
			"\t\t\t\t<validation>",
			"\t\t\t\t\t<rule name=\"required-entry\" xsi:type=\"boolean\">true</rule>",
			"\t\t\t\t</validation>",
			"\t\t\t\t<elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>",
			"\t\t\t</settings>",
			"\t\t\t<formElements>",
			"\t\t\t\t<select>",
			"\t\t\t\t\t<settings>",
			"\t\t\t\t\t\t<options class=\"AppearanceSource${5:appearance_class}\"/>",
			"\t\t\t\t\t</settings>",
			"\t\t\t\t</select>",
			"\t\t\t</formElements>",
			"\t\t</field>",
			"\t</fieldset>",
			"\t<fieldset name=\"general\" sortOrder=\"20\">",
			"\t\t<settings>",
			"\t\t\t<label/>",
			"\t\t</settings>",
			"\t\t$0$BLOCK_COMMENT_START",
			"\t\t<field name=\"field_text\" sortOrder=\"10\" formElement=\"textarea\">",
			"\t\t\t<argument name=\"data\" xsi:type=\"array\">",
			"\t\t\t\t<item name=\"config\" xsi:type=\"array\">",
			"\t\t\t\t\t<item name=\"source\" xsi:type=\"string\">page</item>",
			"\t\t\t\t</item>",
			"\t\t\t</argument>",
			"\t\t\t<settings>",
			"\t\t\t\t<dataScope>quote_text</dataScope>",
			"\t\t\t\t<dataType>text</dataType>",
			"\t\t\t\t<label translate=\"true\">Quote</label>",
			"\t\t\t</settings>",
			"\t\t</field>",
			"\t\t$BLOCK_COMMENT_END",
			"\t</fieldset>",
			"</form>"
		],
		"description": "A snippet to generate a new configuration file for a UI component to be used in Pagebuilder as a content type"
	},
	"[pagebuilder_*_form.xml] New Form Field Class Visual Selector":{
		"prefix": [
			"pb-ui-formfield"
		],
		"body":	[
			"<field name=\"${1:field_name}\" sortOrder=\"${2:sort_order}\" formElement=\"select\">",
			"\t<argument name=\"data\" xsi:type=\"array\">",
			"\t\t<item name=\"config\" xsi:type=\"array\">",
			"\t\t\t<item name=\"default\" xsi:type=\"string\">${4:option_name}</item>",
			"\t\t</item>",
			"\t</argument>",
			"\t<settings>",
			"\t\t<dataType>text</dataType>",
			"\t\t<label translate=\"true\">${3:field_display_name}</label>",
			"\t</settings>",
			"\t<formElements>",
			"\t\t<select>",
			"\t\t\t<settings>",
			"\t\t\t\t<options>",
			"\t\t\t\t\t<option name=\"0\" xsi:type=\"array\">",
			"\t\t\t\t\t\t<item name=\"value\" xsi:type=\"string\">${4:option_name}</item>",
			"\t\t\t\t\t\t<item name=\"label\" xsi:type=\"string\" translate=\"true\">${5:option_display_name}</item>",
			"\t\t\t\t\t</option>",
			"\t\t\t\t</options>",
			"\t\t\t</settings>",
			"\t\t</select>",
			"\t</formElements>",
			"</field>",
			"$0"
		],
		"description": "A snippet to generate a new <field> element to be used within a pagebuilder UI Component form configuration"
	},
